<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.laoshi.test.fragments.ListsFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_lists">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.laoshi.test.fragments.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">

    </fragment>
    <fragment
        android:id="@+id/MiddleFragment"
        android:name="com.laoshi.test.fragments.MiddleFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_middle">

    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.laoshi.test.fragments.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/OpenBookFragment"
        android:name="com.laoshi.test.fragments.ListsFragments.OpenBookFragment"
        tools:layout="@layout/open_book_fragment">
    </fragment>
    <fragment
        android:id="@+id/WordsFragment"
        android:name="com.laoshi.test.fragments.ListsFragments.WordsFragment"
        tools:layout="@layout/fragment_words">
    </fragment>
</navigation>